<Window x:Class="HostAppInPanelLib.WrapperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfAdornedControl="clr-namespace:WpfAdornedControl;assembly=WpfAdornedControl"
        xmlns:wpfControls="clr-namespace:WpfAdornedControl.WpfControls;assembly=WpfAdornedControl"
        mc:Ignorable="d"
        Title="WrapperWindow" Height="600" Width="800" SizeChanged="Window_SizeChanged" Closing="Window_Closing" Closed="Window_Closed" Loaded="Window_Loaded">
    <wpfAdornedControl:AdornedControl Name="LoadingAdorner">
        <wpfAdornedControl:AdornedControl.AdornerContent>
            <wpfControls:LoadingWait></wpfControls:LoadingWait>
        </wpfAdornedControl:AdornedControl.AdornerContent>
        <Grid>
            <Grid Loaded="Grid_Loaded" Name="grid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            </Grid>
        </Grid>
    </wpfAdornedControl:AdornedControl>
</Window>
