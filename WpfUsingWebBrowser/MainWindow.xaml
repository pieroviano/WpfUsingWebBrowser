<Window x:Class="WpfUsingWebBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUsingWebBrowser"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1280">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Call API" Click="MenuItemCallApi_Click"/>
                <Separator />
                <MenuItem Header="_Exit" Name="MenuItemExit" Click="MenuItemExit_Click"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Height="20">
            <StatusBarItem><TextBlock Name="StatusBar"></TextBlock></StatusBarItem>
        </StatusBar>
        <Grid>
            <WebBrowser x:Name="WebBrowser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="WebBrowser_Loaded" Navigated="WebBrowser_Navigated" />
        </Grid>
    </DockPanel>
</Window>
